@using Cortex.Web.Models
@using Cortex.Web.Models.Networks
@model List<Cortex.Web.Models.Networks.NetworkModel>

@{
    ViewBag.Title = "Your networks";
}

<h2>Your networks</h2>

@if (Model.Count > 0)
{
    <div class="networks-list">
        @foreach (NetworkModel network in Model)
        {
            <div class="network-container">
                <a class="fs-3" href="@network.Id">@network.Name</a>
                <small>@network.CreatedDate</small>
                <p>@network.Description</p>
            </div>
        }
    </div>
}
else
{
    <p>
        You have no networks yet. <a asp-controller="Networks" asp-action="CreateNetwork">Create new network</a>.
    </p>
}