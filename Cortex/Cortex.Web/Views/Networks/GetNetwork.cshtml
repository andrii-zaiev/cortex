@using Cortex.Web.Models.Shared
@model Cortex.Web.Models.Networks.NetworkDetailsModel

@{
    ViewBag.Title = Model.Name;
}

<div class="heading">
    <span class="fs-2">@Model.Name</span>
    @if (Model.IsOwner)
    {
        <a class="button-primary button-small" asp-controller="Networks" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="fa fa-edit"></i>
            <span>Edit</span>
        </a>
    }
</div>

<small>
    <span>by</span>
    <span>
        @Model.Author.Name &lt;@Model.Author.UserName.ToLower()&gt;
    </span>
    <span>@Model.CreatedDate.ToString("dd-MMM-yyyy HH:mm 'UTC'")</span>
</small>

@if (Model.IsOwner)
{
    <div class="section">
        <h4>Access</h4>
        <div class="grid">
            <div class="grid-row">
                <span class="label-cell">View</span>
                <div class="cell">
                    <span>@Model.ReadAccess</span>
                    @if (Model.ReadAccessUsers.Any())
                    {
                        <span>
                            @foreach (UserDisplayModel user in Model.ReadAccessUsers)
                            {
                                <span>
                                    @user.Name &lt;@user.UserName.ToLower()&gt;
                                </span>
                            }
                        </span>
                    }
                </div>
            </div>
            <div class="grid-row">
                <span class="label-cell">Edit</span>
                <div class="cell">
                    <span>@Model.WriteAccess</span>
                    @if (Model.WriteAccessUsers.Any())
                    {
                        <span>
                            @foreach (UserDisplayModel user in Model.ReadAccessUsers)
                            {
                                <span>
                                    @user.Name &lt;@user.UserName.ToLower()&gt;
                                </span>
                            }
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
}

<div class="section">
    <h4>Description</h4>
    <div>
        @Model.Description
    </div>
</div>